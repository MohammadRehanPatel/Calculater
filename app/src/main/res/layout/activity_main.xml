<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkGrey"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".MainActivity"
    tools:visibility="visible">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workingTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:paddingRight="30dp"
            android:text=""
            android:textAlignment="textEnd"

            android:textColor="@color/white"
            android:textSize="30sp"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/resultTextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingRight="30dp"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="45sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="clearOnClick"
            android:text="C"
            android:textColor="@color/red"

            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="bracketOnClick"
            android:text="()"
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="powOnClick"
            android:text="^"
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="divOnClick"
            android:text="/"
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="sevenOnClick"
            android:text="7"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="eightOnClick"
            android:text="8"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="nineOnClick"
            android:text="9"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="mulOnClick"
            android:text="x"
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="fourOnClick"
            android:text="4"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="fiveOnClick"
            android:text="5"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="sixOnClick"
            android:text="6"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="subOnClick"
            android:text="-"
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="oneOnClick"
            android:text="1"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="twoOnClick"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="threeOnClick"
            android:text="3"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="addOnClick"
            android:text="+"
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="dotOnClick"
            android:text="."
            android:textColor="@color/orange"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/gradient_normal"
            android:onClick="zeroOnClick"
            android:text="0"
            android:textColor="@color/white"
            android:textSize="@dimen/calcButtonTextSize" />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textSize="50sp"
            android:onClick="ansOnClick"
            android:background="@drawable/gradient_normal"
            android:textColor="@color/orange"
            android:text="="


            />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>